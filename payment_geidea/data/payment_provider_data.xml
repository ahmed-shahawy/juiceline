<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Geidea Payment Provider -->
        <record id="payment_provider_geidea" model="payment.provider">
            <field name="name">Geidea</field>
            <field name="code">geidea</field>
            <field name="state">disabled</field>
            <field name="is_published">false</field>
            <field name="payment_method_ids" eval="[(6, 0, [ref('payment.payment_method_credit_card')])]"/>
            <!-- Payment icons removed to avoid external ID errors in Odoo 18 -->
            <!-- Icons can be added later once the correct external IDs are identified -->
            <field name="allow_tokenization">True</field>
            <field name="capture_manually">False</field>
            <field name="allow_express_checkout">False</field>
            <field name="redirect_form_view_id" ref="payment.redirect_form"/>
        </record>

    </data>
</odoo>