<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Payment Provider Configuration Form for Geidea -->
    <record id="payment_provider_form_geidea" model="ir.ui.view">
        <field name="name">payment.provider.form.geidea</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='provider_details']" position="after">
                <group string="Credentials" name="geidea_credentials" 
                       invisible="code != 'geidea'">
                    <field name="geidea_merchant_id" password="True"/>
                    <field name="geidea_api_key" password="True"/>
                    <field name="geidea_merchant_password" password="True"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>