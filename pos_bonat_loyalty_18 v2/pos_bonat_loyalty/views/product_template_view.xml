<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_uom_po_id_editable" model="ir.ui.view">
        <field name="name">product.template.form.uom_po_id.editable</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Make uom_po_id field editable by removing readonly attribute -->
            <xpath expr="//field[@name='uom_po_id']" position="attributes">
                <attribute name="readonly">False</attribute>
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
                <attribute name="domain">[('category_id', '=', uom_id.category_id)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>