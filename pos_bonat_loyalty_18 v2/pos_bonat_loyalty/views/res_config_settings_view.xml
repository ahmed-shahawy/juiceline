<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_bonat" model="ir.ui.view">
        <field name="name">pos.bonat.loyalty.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_inventory_section']" position="after">
                <block title="Bonat Integration" id="pos_pos_bonat_integration_section">
                    <setting>
                        <field name="enable_bonat_integration" />
                        <div class="content-group" invisible="not enable_bonat_integration">
                            <div class="mt16">
                                <label string="API Key" for="bonat_api_key" class="o_light_label" />
                                <field name="bonat_api_key" placeholder="Enter your Bonat API Key" password="True" />
                                <div class="text-muted">
                                    <small>Keep your API key secure. It will be used to authenticate with Bonat services.</small>
                                </div>
                            </div>
                            <div>
                                <label string="Merchant ID" for="bonat_merchant_id" class="o_light_label" />
                                <field name="bonat_merchant_id" placeholder="Your unique merchant identifier" />
                            </div>
                            <div>
                                <label string="Merchant Name" for="bonat_merchant_name" class="o_light_label" />
                                <field name="bonat_merchant_name" placeholder="Your business name" />
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label string="Cache Timeout (minutes)" for="bonat_cache_timeout" class="o_light_label" />
                                    <field name="bonat_cache_timeout" />
                                    <div class="text-muted">
                                        <small>How long to cache API responses (1-60 minutes)</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label string="API Retry Attempts" for="bonat_retry_attempts" class="o_light_label" />
                                    <field name="bonat_retry_attempts" />
                                    <div class="text-muted">
                                        <small>Number of retry attempts for failed API calls (1-10)</small>
                                    </div>
                                </div>
                            </div>
                            <div class="alert alert-info mt16" role="alert">
                                <strong>Performance Settings:</strong> Higher cache timeout reduces API calls but may delay updates. 
                                More retry attempts improve reliability but may slow down error responses.
                            </div>
                            <div class="mt16">
                                <button name="test_bonat_connection" type="object" string="Test Connection" 
                                        class="btn btn-secondary" invisible="not enable_bonat_integration"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
    <record id="view_pos_config_form_inherit_discount" model="ir.ui.view">
        <field name="name">res.config.form.inherit.discount</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pos_module_pos_discount']" position="attributes">
                <attribute name="context">{'default_pos_module_pos_discount': True}</attribute>
            </xpath>
        </field>
    </record>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_discount</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pos_discount_pc']" position="attributes">
                <attribute name="context">{'default_pos_discount_pc': 0}</attribute>
            </xpath>
        </field>
    </record>
</odoo>