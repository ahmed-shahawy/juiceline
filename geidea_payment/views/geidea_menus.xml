<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Geidea Device Actions -->
        <record id="geidea_device_action" model="ir.actions.act_window">
            <field name="name">Geidea Devices</field>
            <field name="res_model">geidea.device</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="geidea_device_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Geidea payment device!
                </p>
                <p>
                    Geidea devices allow you to process payments on different platforms
                    including Windows, Android, and iOS devices.
                </p>
            </field>
        </record>

        <!-- Geidea Transaction Actions -->
        <record id="geidea_transaction_action" model="ir.actions.act_window">
            <field name="name">Geidea Transactions</field>
            <field name="res_model">geidea.transaction</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="geidea_transaction_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Geidea transactions yet!
                </p>
                <p>
                    All Geidea payment transactions will appear here.
                </p>
            </field>
        </record>

        <!-- Geidea Configuration Actions -->
        <record id="geidea_config_action" model="ir.actions.act_window">
            <field name="name">Geidea Configuration</field>
            <field name="res_model">geidea.config</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="geidea_config_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Geidea configuration!
                </p>
                <p>
                    Configure Geidea payment settings for different environments
                    and use cases.
                </p>
            </field>
        </record>

        <!-- Geidea Configuration Tree View -->
        <record id="geidea_config_tree" model="ir.ui.view">
            <field name="name">geidea.config.tree</field>
            <field name="model">geidea.config</field>
            <field name="arch" type="xml">
                <tree string="Geidea Configurations">
                    <field name="name"/>
                    <field name="provider_id"/>
                    <field name="api_version"/>
                    <field name="enable_3ds"/>
                    <field name="enable_logging"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Main Geidea Menu -->
        <menuitem id="menu_geidea_root" 
                  name="Geidea Payment" 
                  parent="account.menu_finance" 
                  sequence="99"/>
        
        <menuitem id="menu_geidea_devices" 
                  name="Devices" 
                  parent="menu_geidea_root" 
                  action="geidea_device_action" 
                  sequence="10"/>
        
        <menuitem id="menu_geidea_transactions" 
                  name="Transactions" 
                  parent="menu_geidea_root" 
                  action="geidea_transaction_action" 
                  sequence="20"/>
        
        <menuitem id="menu_geidea_config" 
                  name="Configuration" 
                  parent="menu_geidea_root" 
                  action="geidea_config_action" 
                  sequence="30"/>
        
    </data>
</odoo>