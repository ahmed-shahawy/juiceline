<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Geidea Configuration in General Settings -->
        <record id="res_config_settings_view_form_inherit_geidea" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.geidea</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Geidea Payment" string="Geidea Payment" data-key="geidea_payment">
                        <h2>Geidea Payment Configuration</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="geidea_test_mode"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="geidea_test_mode"/>
                                    <div class="text-muted">
                                        Enable test mode for Geidea payment processing
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="geidea_merchant_id" string="Merchant ID"/>
                                    <field name="geidea_merchant_id" class="oe_inline"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="geidea_api_key" string="API Key"/>
                                    <field name="geidea_api_key" class="oe_inline" password="True"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>