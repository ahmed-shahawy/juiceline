<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Geidea Device Views -->
    
    <!-- Tree View -->
    <record id="view_geidea_device_tree" model="ir.ui.view">
        <field name="name">geidea.device.tree</field>
        <field name="model">geidea.device</field>
        <field name="arch" type="xml">
            <tree string="Geidea Devices">
                <field name="name"/>
                <field name="device_id"/>
                <field name="device_type"/>
                <field name="connection_status" widget="badge"
                       decoration-success="connection_status=='connected'"
                       decoration-danger="connection_status=='error'"
                       decoration-warning="connection_status=='disconnected'"/>
                <field name="last_connected"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_geidea_device_form" model="ir.ui.view">
        <field name="name">geidea.device.form</field>
        <field name="model">geidea.device</field>
        <field name="arch" type="xml">
            <form string="Geidea Device">
                <header>
                    <button name="connect_device" string="Connect" type="object" 
                            class="btn-primary" invisible="connection_status == 'connected'"/>
                    <button name="disconnect_device" string="Disconnect" type="object" 
                            class="btn-secondary" invisible="connection_status != 'connected'"/>
                    <button name="test_device" string="Test Device" type="object" class="btn-info"/>
                    <field name="connection_status" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Device Name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info">
                            <field name="device_id"/>
                            <field name="serial_number"/>
                            <field name="device_type"/>
                            <field name="active"/>
                            <field name="last_connected"/>
                        </group>
                        <group name="connection_info">
                            <field name="acquirer_id"/>
                            <field name="pos_config_id"/>
                            <field name="firmware_version"/>
                            <field name="ip_address"/>
                            <field name="port"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_geidea_device" model="ir.actions.act_window">
        <field name="name">Geidea Devices</field>
        <field name="res_model">geidea.device</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first Geidea Payment Device!
            </p>
            <p>
                Add and configure Geidea payment devices for your POS terminals.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_geidea_device"
              name="Payment Devices"
              parent="menu_geidea_payment_root"
              action="action_geidea_device"
              sequence="20"/>
</odoo>