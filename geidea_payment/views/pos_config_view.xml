<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_inherit_geidea" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.geidea</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='payment_methods_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="enable_geidea"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_geidea"/>
                        <div class="text-muted">
                            Enable Geidea payment terminal integration
                        </div>
                        <div class="content-group mt16" attrs="{'invisible': [('enable_geidea', '=', False)]}">
                            <div class="row mt16">
                                <label string="API Key" for="geidea_api_key" class="col-lg-3 o_light_label"/>
                                <field name="geidea_api_key" password="True"/>
                            </div>
                            <div class="row">
                                <label string="Merchant ID" for="geidea_merchant_id" class="col-lg-3 o_light_label"/>
                                <field name="geidea_merchant_id"/>
                            </div>
                            <div class="row">
                                <label string="Terminal ID" for="geidea_terminal_id" class="col-lg-3 o_light_label"/>
                                <field name="geidea_terminal_id"/>
                            </div>
                            <div class="row">
                                <label string="Test Mode" for="geidea_test_mode" class="col-lg-3 o_light_label"/>
                                <field name="geidea_test_mode"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>