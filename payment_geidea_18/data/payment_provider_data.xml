<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Geidea Payment Provider Data -->
        <record id="payment_provider_geidea" model="payment.provider">
            <field name="name">Geidea</field>
            <field name="code">geidea</field>
            <field name="state">disabled</field>
            <field name="is_published">False</field>
            <field name="payment_icon_ids" eval="[(6, 0, [ref('payment.payment_icon_cc_visa'), ref('payment.payment_icon_cc_mastercard')])]"/>
            <field name="allow_tokenization">True</field>
            <field name="capture_manually">False</field>
            <field name="support_manual_capture">True</field>
            <field name="support_refund">full_only</field>
            <field name="support_tokenization">True</field>
            <field name="redirect_form_view_id" ref="geidea_form"/>
            <field name="inline_form_view_id" ref="geidea_form"/>
        </record>

        <!-- Default Geidea Payment Acquirer Configuration -->
        <record id="geidea_payment_acquirer_default" model="geidea.payment.acquirer">
            <field name="name">Default Geidea Configuration</field>
            <field name="payment_provider_id" ref="payment_provider_geidea"/>
            <field name="active">False</field>
            <field name="merchant_id">DEMO_MERCHANT</field>
            <field name="api_key">demo_api_key</field>
            <field name="api_password">demo_api_password</field>
            <field name="gateway_url">https://api-merchant.staging.geidea.net</field>
            <field name="test_mode">True</field>
            <field name="pos_enabled">True</field>
        </record>
    </data>
</odoo>