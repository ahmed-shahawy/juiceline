<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- POS Config Form View Extension -->
        <record id="view_pos_config_form_geidea" model="ir.ui.view">
            <field name="name">pos.config.form.geidea</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='payment_methods']" position="after">
                    <page string="Geidea Terminals" name="geidea_terminals">
                        <group>
                            <group string="Terminal Configuration">
                                <field name="geidea_terminal_ids" widget="many2many_tags"/>
                                <field name="geidea_auto_connect"/>
                                <field name="geidea_payment_timeout"/>
                                <field name="geidea_receipt_options"/>
                            </group>
                        </group>
                        <group string="Available Terminals">
                            <field name="geidea_terminal_ids" nolabel="1" mode="tree">
                                <tree>
                                    <field name="name"/>
                                    <field name="terminal_id"/>
                                    <field name="connection_type"/>
                                    <field name="platform"/>
                                    <field name="connection_status"/>
                                    <button name="test_connection" type="object" string="Test Connection" icon="fa-plug"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>