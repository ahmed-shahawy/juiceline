<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_inherit_geidea" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.geidea</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='payment_methods_section']//div[hasclass('o_setting_box')]" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="enable_geidea"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_geidea"/>
                        <div class="text-muted">
                            Enable Geidea payment terminal integration
                        </div>
                        <div class="content-group mt16" attrs="{'invisible': [('enable_geidea', '=', False)]}">
                            <field name="geidea_terminal_ids" widget="many2many_tags"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>