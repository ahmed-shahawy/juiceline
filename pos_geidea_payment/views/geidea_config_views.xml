<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Geidea Configuration Form View -->
    <record id="view_geidea_config_form" model="ir.ui.view">
        <field name="name">geidea.config.form</field>
        <field name="model">geidea.config</field>
        <field name="arch" type="xml">
            <form string="Geidea Configuration">
                <header>
                    <button name="test_connection" string="Test Connection" type="object" class="btn-primary"/>
                    <button name="sync_with_geidea" string="Sync with Geidea" type="object" class="btn-secondary"/>
                    <field name="connection_status" widget="statusbar" statusbar_visible="disconnected,connected,error"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_geidea_device_from_config)d" type="action" class="oe_stat_button" icon="fa-mobile">
                            <field name="device_ids" widget="statinfo" string="Devices"/>
                        </button>
                        <button name="%(action_geidea_transaction_from_config)d" type="action" class="oe_stat_button" icon="fa-credit-card">
                            <field name="total_transactions" widget="statinfo" string="Transactions"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Configuration Name"/></h1>
                    </div>
                    
                    <group>
                        <group string="Basic Configuration">
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="environment"/>
                            <field name="api_url" readonly="1"/>
                        </group>
                        <group string="Status">
                            <field name="last_sync_date"/>
                            <field name="error_message" invisible="not error_message"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Credentials" name="credentials">
                            <group>
                                <group string="Authentication">
                                    <field name="api_key" password="True" required="1"/>
                                    <field name="merchant_id" required="1"/>
                                    <field name="terminal_id" required="1"/>
                                </group>
                                <group string="Security">
                                    <field name="encryption_key" password="True"/>
                                    <field name="webhook_secret" password="True"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Settings" name="settings">
                            <group>
                                <group string="Transaction Settings">
                                    <field name="currency_id"/>
                                    <field name="timeout"/>
                                    <field name="auto_capture"/>
                                </group>
                                <group string="POS Integration">
                                    <field name="pos_config_ids" widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Statistics" name="statistics">
                            <group>
                                <group string="Transaction Stats">
                                    <field name="total_transactions"/>
                                    <field name="successful_transactions"/>
                                    <field name="failed_transactions"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Geidea Configuration Tree View -->
    <record id="view_geidea_config_tree" model="ir.ui.view">
        <field name="name">geidea.config.tree</field>
        <field name="model">geidea.config</field>
        <field name="arch" type="xml">
            <tree string="Geidea Configurations">
                <field name="name"/>
                <field name="merchant_id"/>
                <field name="environment"/>
                <field name="connection_status" widget="badge" decoration-success="connection_status == 'connected'" decoration-danger="connection_status == 'error'" decoration-muted="connection_status == 'disconnected'"/>
                <field name="total_transactions"/>
                <field name="last_sync_date"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Geidea Configuration Search View -->
    <record id="view_geidea_config_search" model="ir.ui.view">
        <field name="name">geidea.config.search</field>
        <field name="model">geidea.config</field>
        <field name="arch" type="xml">
            <search string="Search Geidea Configurations">
                <field name="name"/>
                <field name="merchant_id"/>
                <field name="terminal_id"/>
                <field name="environment"/>
                <field name="company_id" groups="base.group_multi_company"/>
                
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Connected" name="connected" domain="[('connection_status', '=', 'connected')]"/>
                <filter string="Disconnected" name="disconnected" domain="[('connection_status', '=', 'disconnected')]"/>
                <filter string="Error" name="error" domain="[('connection_status', '=', 'error')]"/>
                <separator/>
                <filter string="Production" name="production" domain="[('environment', '=', 'production')]"/>
                <filter string="Sandbox" name="sandbox" domain="[('environment', '=', 'sandbox')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Environment" name="group_environment" context="{'group_by': 'environment'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'connection_status'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Geidea Configuration Action -->
    <record id="action_geidea_config" model="ir.actions.act_window">
        <field name="name">Geidea Configurations</field>
        <field name="res_model">geidea.config</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Geidea configuration!
            </p>
            <p>
                Configure your Geidea payment integration to start processing payments through your POS system.
                You'll need your API key, Merchant ID, and Terminal ID from Geidea.
            </p>
        </field>
    </record>
</odoo>