<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Demo Geidea Terminal for Testing -->
        <record id="demo_geidea_terminal_network" model="geidea.terminal">
            <field name="name">Demo Geidea Terminal (Network)</field>
            <field name="terminal_id">GDA001</field>
            <field name="merchant_id">DEMO_MERCHANT_001</field>
            <field name="terminal_key">demo_terminal_key_123</field>
            <field name="connection_type">network</field>
            <field name="platform">auto</field>
            <field name="ip_address">192.168.1.100</field>
            <field name="port">8080</field>
            <field name="timeout">30</field>
            <field name="retry_attempts">3</field>
            <field name="auto_reconnect" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <record id="demo_geidea_terminal_bluetooth" model="geidea.terminal">
            <field name="name">Demo Geidea Terminal (Bluetooth)</field>
            <field name="terminal_id">GDA002</field>
            <field name="merchant_id">DEMO_MERCHANT_001</field>
            <field name="terminal_key">demo_terminal_key_456</field>
            <field name="connection_type">bluetooth</field>
            <field name="platform">auto</field>
            <field name="bluetooth_address">00:11:22:33:44:55</field>
            <field name="timeout">30</field>
            <field name="retry_attempts">3</field>
            <field name="auto_reconnect" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <record id="demo_geidea_terminal_usb" model="geidea.terminal">
            <field name="name">Demo Geidea Terminal (USB)</field>
            <field name="terminal_id">GDA003</field>
            <field name="merchant_id">DEMO_MERCHANT_001</field>
            <field name="terminal_key">demo_terminal_key_789</field>
            <field name="connection_type">usb</field>
            <field name="platform">auto</field>
            <field name="usb_vendor_id">0x1234</field>
            <field name="usb_product_id">0x5678</field>
            <field name="timeout">30</field>
            <field name="retry_attempts">3</field>
            <field name="auto_reconnect" eval="True"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>