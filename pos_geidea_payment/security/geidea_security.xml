<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- مجموعات الأمان -->
        <record id="group_geidea_user" model="res.groups">
            <field name="name">Geidea User</field>
            <field name="category_id" ref="base.module_category_sales_point_of_sale"/>
            <field name="implied_ids" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
        </record>

        <record id="group_geidea_manager" model="res.groups">
            <field name="name">Geidea Manager</field>
            <field name="category_id" ref="base.module_category_sales_point_of_sale"/>
            <field name="implied_ids" eval="[(4, ref('group_geidea_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- قواعد الأمان -->
        <record id="geidea_terminal_rule_user" model="ir.rule">
            <field name="name">Geidea Terminal: POS User Access</field>
            <field name="model_id" ref="model_geidea_terminal"/>
            <field name="domain_force">[('pos_config_ids', 'in', user.pos_config_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('group_geidea_user'))]"/>
        </record>

        <record id="geidea_terminal_rule_manager" model="ir.rule">
            <field name="name">Geidea Terminal: Manager Access</field>
            <field name="model_id" ref="model_geidea_terminal"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_geidea_manager'))]"/>
        </record>

        <record id="geidea_transaction_rule_user" model="ir.rule">
            <field name="name">Geidea Transaction: POS User Access</field>
            <field name="model_id" ref="model_geidea_transaction"/>
            <field name="domain_force">[('terminal_id.pos_config_ids', 'in', user.pos_config_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('group_geidea_user'))]"/>
        </record>

        <record id="geidea_transaction_rule_manager" model="ir.rule">
            <field name="name">Geidea Transaction: Manager Access</field>
            <field name="model_id" ref="model_geidea_transaction"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_geidea_manager'))]"/>
        </record>
    </data>
</odoo>