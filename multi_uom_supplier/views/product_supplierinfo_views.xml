<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Extend product template form view to show supplier UOM -->
        <record id="product_template_form_view_supplier_uom" model="ir.ui.view">
            <field name="name">product.template.form.supplier.uom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="purchase.product_template_form_view_procurement_button"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='seller_ids']//tree//field[@name='price']" position="after">
                    <field name="supplier_uom_id" optional="show"/>
                    <field name="supplier_uom_factor" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='seller_ids']//form//field[@name='price']" position="after">
                    <field name="supplier_uom_id" 
                           domain="[('category_id', '=', parent.uom_po_id.category_id)]"/>
                    <field name="supplier_uom_factor" readonly="1"/>
                </xpath>
            </field>
        </record>

        <!-- Extend product form view to show supplier UOM -->
        <record id="product_form_view_supplier_uom" model="ir.ui.view">
            <field name="name">product.product.form.supplier.uom</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="purchase.product_form_view_procurement_button"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='seller_ids']//tree//field[@name='price']" position="after">
                    <field name="supplier_uom_id" optional="show"/>
                    <field name="supplier_uom_factor" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='seller_ids']//form//field[@name='price']" position="after">
                    <field name="supplier_uom_id" 
                           domain="[('category_id', '=', parent.uom_po_id.category_id)]"/>
                    <field name="supplier_uom_factor" readonly="1"/>
                </xpath>
            </field>
        </record>

        <!-- Supplier info tree view -->
        <record id="product_supplierinfo_tree_view_uom" model="ir.ui.view">
            <field name="name">product.supplierinfo.tree.uom</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">
                <field name="price" position="after">
                    <field name="supplier_uom_id" optional="show"/>
                </field>
            </field>
        </record>

        <!-- Supplier info form view -->
        <record id="product_supplierinfo_form_view_uom" model="ir.ui.view">
            <field name="name">product.supplierinfo.form.uom</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="arch" type="xml">
                <field name="price" position="after">
                    <field name="supplier_uom_id" 
                           domain="[('category_id', '=', product_tmpl_id.uom_po_id.category_id)]"/>
                    <field name="supplier_uom_factor" readonly="1"/>
                </field>
            </field>
        </record>

        <!-- Add menu item for supplier UOM management -->
        <record id="action_supplier_uom_management" model="ir.actions.act_window">
            <field name="name">Supplier UOM Management</field>
            <field name="res_model">product.supplierinfo</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure supplier-specific units of measure!
                </p>
                <p>
                    Here you can manage different units of measure for the same product
                    from different suppliers. This allows for automatic conversion when
                    creating purchase orders.
                </p>
            </field>
        </record>

        <menuitem id="menu_supplier_uom_management"
                  name="Supplier UOM"
                  parent="purchase.menu_procurement_config"
                  action="action_supplier_uom_management"
                  sequence="50"/>

    </data>
</odoo>