<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Extend purchase order form view to show supplier UOM -->
        <record id="purchase_order_form_view_supplier_uom" model="ir.ui.view">
            <field name="name">purchase.order.form.supplier.uom</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom']" position="after">
                    <field name="supplier_uom_id" optional="hide" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//form//field[@name='product_uom']" position="after">
                    <field name="supplier_uom_id" readonly="1"/>
                </xpath>
            </field>
        </record>

        <!-- Extend purchase order tree view -->
        <record id="purchase_order_line_tree_view_supplier_uom" model="ir.ui.view">
            <field name="name">purchase.order.line.tree.supplier.uom</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
            <field name="arch" type="xml">
                <field name="product_uom" position="after">
                    <field name="supplier_uom_id" optional="hide"/>
                </field>
            </field>
        </record>

    </data>
</odoo>