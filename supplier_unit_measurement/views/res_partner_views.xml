<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Partner Form View -->
    <record id="view_partner_form_supplier_uom" model="ir.ui.view">
        <field name="name">res.partner.form.supplier.uom</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']" position="inside">
                <group string="وحدات القياس">
                    <div class="o_horizontal_separator">
                        وحدات قياس المورد
                    </div>
                    <field name="supplier_uom_count" invisible="1"/>
                    <button name="action_view_supplier_uoms"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-balance-scale"
                            string="وحدات القياس"
                            attrs="{'invisible': [('supplier_rank', '=', 0)]}"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Add supplier UOM tab for suppliers -->
    <record id="view_partner_supplier_form_uom" model="ir.ui.view">
        <field name="name">res.partner.supplier.form.uom</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="وحدات القياس" name="supplier_uom" 
                      attrs="{'invisible': [('supplier_rank', '=', 0)]}">
                    <field name="supplier_uom_ids">
                        <tree editable="bottom">
                            <field name="product_tmpl_id"/>
                            <field name="supplier_uom_id"/>
                            <field name="standard_uom_id"/>
                            <field name="conversion_factor"/>
                            <field name="is_default"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>