<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- UOM Conversion Tree View -->
    <record id="view_uom_conversion_tree" model="ir.ui.view">
        <field name="name">uom.conversion.tree</field>
        <field name="model">uom.conversion</field>
        <field name="arch" type="xml">
            <tree string="قواعد تحويل وحدات القياس">
                <field name="name"/>
                <field name="from_uom_id"/>
                <field name="to_uom_id"/>
                <field name="factor"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- UOM Conversion Form View -->
    <record id="view_uom_conversion_form" model="ir.ui.view">
        <field name="name">uom.conversion.form</field>
        <field name="model">uom.conversion</field>
        <field name="arch" type="xml">
            <form string="قاعدة تحويل وحدة القياس">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="from_uom_id"/>
                            <field name="to_uom_id"/>
                        </group>
                        <group>
                            <field name="factor"/>
                            <field name="category_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- UOM Conversion Action -->
    <record id="action_uom_conversion" model="ir.actions.act_window">
        <field name="name">قواعد تحويل وحدات القياس</field>
        <field name="res_model">uom.conversion</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                إنشاء أول قاعدة تحويل
            </p>
            <p>
                يمكنك هنا تحديد قواعد التحويل بين وحدات القياس المختلفة
                لتسهيل عملية التحويل التلقائي.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_uom_conversion"
              name="قواعد التحويل"
              parent="menu_supplier_unit_measurement_root"
              action="action_uom_conversion"
              sequence="20"/>
</odoo>